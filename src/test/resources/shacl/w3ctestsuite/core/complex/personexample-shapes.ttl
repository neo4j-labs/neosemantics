ex:PersonShape
  rdf:type sh:NodeShape ;
  sh:closed "true"^^xsd:boolean ;
  sh:ignoredProperties (
      rdf:type ex:uri
    ) ;
  sh:property bnodes:b61064 ;
  sh:property bnodes:b60054 ;
  sh:property [
      sh:path [
          sh:inversePath ex:worksFor ;
        ] ;
      sh:name "employee" ;
    ] ;
  sh:targetClass ex:Person ;
.

